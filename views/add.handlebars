<section id="add" class="container">
  <div class="form-wrap">
    <h1>Auftrag hinzuf√ºgen</h1>
    <form action="/transport/add" method="POST">

      <div class="input-group">
        <label for="transport_status">Packet-Status &ensp;<span style="color: var(--primary-color)">0 : nicht geliefert, 1 : geliefert</span></label>
        <input type="number" name="transport_status" id="transport_status" class="input-box"
          placeholder="transport_status" maxlength="100" value={{transport_status}}>
      </div>

      <div class="input-group">
        <label for="paket_id">paket_id</label>
        <input type="number" name="paket_id" id="paket_id" class="input-box" placeholder="paket_id" maxlength="100"
          value={{paket_id}}>
      </div>


      <div class="input-group">
        <label for="paket_bez">paket_bez</label>
        <input type="text" name="paket_bez" id="paket_bez" class="input-box" placeholder="paket_bez" maxlength="100"
          value={{paket_bez}}>
      </div>

      <div class="input-group">
        <label for="fach_bez">fach_bez</label>
        <input type="text" name="fach_bez" id="fach_bez" class="input-box" placeholder="fach_bez" maxlength="100"
          value={{fach_bez}}>
      </div>

      <div class="input-group">
        <label for="zbs_bez">zbs_bez</label>
        <input type="text" name="zbs_bez" id="zbs_bez" class="input-box" placeholder="zbs_bez" maxlength="100"
          value={{zbs_bez}}>
      </div>


      <div class="input-group">
        <label for="tour_bez">tour_bez</label>
        <input type="text" name="tour_bez" id="tour_bez" class="input-box" placeholder="tour_bez" maxlength="100"
          value={{tour_bez}}>
      </div>


      <div class="input-group">
        <label for="tour">tour</label>
        <input type="text" name="tour" id="tour" class="input-box" placeholder="tour" maxlength="100" value={{tour}}>
      </div>

      <div class="input-group">
        <label for="emp_name">emp_name</label>
        <input type="text" name="emp_name" id="emp_name" class="input-box" placeholder="emp_name" maxlength="100"
          value={{emp_name}}>
      </div>

      <div class="input-group">
        <label for="emp_plz">emp_plz</label>
        <input type="text" name="emp_plz" id="emp_plz" class="input-box" placeholder="emp_plz" maxlength="100"
          value={{emp_plz}}>
      </div>

      <div class="input-group">
        <label for="abd_name">abd_name</label>
        <input type="text" name="abd_name" id="abd_name" class="input-box" placeholder="abd_name" maxlength="100"
          value={{abd_name}}>
      </div>

      <div class="input-group">
        <label for="abd_plz">abd_plz</label>
        <input type="text" name="abd_plz" id="abd_plz" class="input-box" placeholder="abd_plz" maxlength="100"
          value={{abd_plz}}>
      </div>

      <div class="input-group">
        <label for="abholversuch">abholversuch &ensp;<span style="color: var(--primary-color)">max. 3 Abholversuche</span></label>
        <input type="number" name="abholversuch" id="abholversuch" class="input-box" placeholder="abholversuch"
          maxlength="100" value={{abholversuch}}>
      </div>

            <div class="input-group">
        <label for="alter">alter &ensp;<span style="color: var(--primary-color)">max. Alter 14 Tage</span></label>
        <input type="number" name="alter" id="alter" class="input-box" placeholder="alter"
          maxlength="100" value={{alter}}>
      </div>

      <input type="submit" value="Add transport" class="btn btn-reverse">
    </form>
  </div>
</section>